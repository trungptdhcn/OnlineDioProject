<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/navigation_drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:context=".NavigationActivity">
    <FrameLayout
            android:id="@+id/navigation_main_FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>
    <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/navbar_1" android:minHeight="40dp">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/navigation_search"
                    >
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/navigation_edtSearch"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginRight="5dp"
                        android:hint="Search"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/navigation_search_icon"
                        android:layout_marginLeft="3dp"
                        android:minWidth="100dp"
                        android:textSize="10sp">
                </EditText>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/navigation_station_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6f6f6"
                android:orientation="horizontal"
                >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/navigation_imgStation"
                        android:src="@drawable/navigation_imagestation"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="6dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/navigation_tvMyStation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/navigation_tvMyStation"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        />
                <TextView
                        android:id="@+id/navigation_tvNameStation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="9sp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/navigation_tvNameStation"
                        android:textColor="#434343"
                        />
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/navigation_imgNext"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/navigation_nextimage"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:id="@+id/navigation_ivProfile"
                        android:layout_toLeftOf="@+id/navigation_imgNext"
                        android:layout_centerVertical="true"
                        android:src="@drawable/navigation_imagesetting"/>
                <!--<ImageView-->
                <!--android:id="@+id/navigation_imgStationSetting"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:src="@drawable/navigation_imagesetting"-->
                <!--/>-->
                <!--<ImageView-->
                <!--android:id="@+id/navigation_imgStationNext"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/navigation_nextimage"-->
                <!--android:layout_toRightOf="@+id/navigation_imgstationsetting"/>-->
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Menu"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textSize="11sp">
            </TextView>
        </LinearLayout>
        <ListView
                android:id="@+id/navigation_lvDrawer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#f6f6f6"
                android:divider="#d1d1d1"
                android:dividerHeight="1px"
                android:choiceMode="singleChoice"/>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>